    int *alloced = (int*)malloc( nthreads*sizeof(int) );
    for (int i=0; i<nthreads; i++)
      alloced[i] = 0;
    #pragma omp parallel for schedule(static,1) \
      reduction(+:alloced[:nthreads])
    for (int it=0; it<nthreads; it++) {
      for (int i=0; i<nthreads; i++)
	alloced[i]++;
    }
